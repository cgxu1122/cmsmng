<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ifhz.core.mapper.ModelChannelRefMapper">

    <sql id="TABLE_NAME">TY_MODEL_CHANNEL_REF</sql>

    <resultMap id="ModelChannelRefResultMap" type="com.ifhz.core.po.ModelChannelRef">
        <id column="MODEL_ID" property="modelId" jdbcType="BIGINT"/>
        <id column="CHANNEL_ID" property="channelId" jdbcType="BIGINT"/>
        <result column="GROUP_ID" property="groupId" jdbcType="BIGINT"/>
        <result column="CREATE_TIME" property="createTime" jdbcType="DATE"/>
    </resultMap>

    <insert id="insert" keyProperty="id" parameterType="com.ifhz.core.po.ModelChannelRef">
        insert into
        <include refid="TABLE_NAME"/>
        <![CDATA[
        ( MODEL_ID,CHANNEL_ID,GROUP_ID)
        values
        (#{modelId},#{channelId},#{groupId})
        ]]>
    </insert>
    <select id="queryByVo" parameterType="com.ifhz.core.po.ModelChannelRef" resultMap="ModelChannelRefResultMap">
        select * from
        <include refid="TABLE_NAME"/>
        where 1=1
        <if test="record.modelId != null and record.modelId != ''">
            and MODEL_ID = #{record.modelId}
        </if>
        <if test="record.channelId != null and record.channelId != ''">
            and CHANNEL_ID = #{record.channelId}
        </if>
        <if test="record.groupId != null and record.groupId != ''">
            and GROUP_ID = #{record.groupId}
        </if>
    </select>
    <delete id="delete" parameterType="com.ifhz.core.po.ModelChannelRef">
        delete from
        <include refid="TABLE_NAME"/>
        where MODEL_ID = #{modelId} and CHANNEL_ID = #{channelId}
    </delete>
</mapper>