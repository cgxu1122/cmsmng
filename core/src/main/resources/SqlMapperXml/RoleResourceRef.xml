<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ifhz.core.mapper.RoleResourceRefMapper">
    <resultMap id="RoleResourceRefResultMap" type="com.ifhz.core.po.RoleResourceRef">
        <id column="ID" property="id" jdbcType="BIGINT"/>
        <result column="ROLE_ID" property="roleId" jdbcType="BIGINT"/>
        <result column="RESOURCE_ID" property="resourceId" jdbcType="BIGINT"/>
        <result column="ACCES" property="acces" jdbcType="INTEGER"/>
        <result column="CREATE_TIME" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="TABLE_NAME"> TY_ROLE_RESOURCE_REF </sql>
    <sql id="CommonFieldSql">
        ID,
        ROLE_ID,
        RESOURCE_ID,
        ACCES,
        CREATE_TIME
    </sql>

    <insert id="insert" parameterType="com.ifhz.core.po.RoleResourceRef">
        <selectKey resultType="long" keyProperty="id">
            SELECT SEQ_TY_ROLE_RESOURCE_REF.CURRVAL FROM DUAL
        </selectKey>
        insert into
        <include refid="TABLE_NAME"/>
        (
        <include refid="CommonFieldSql"/>
        )
        values
        (
        SEQ_TY_ROLE_RESOURCE_REF.nextval,
        #{roleId},
        #{resourceId},
        #{acces},
        #{createTime}
        )
    </insert>


    <delete id="deleteAllRefByResId" parameterType="Long">
        delete from
        <include refid="TABLE_NAME"/>
        where RESOURCE_ID = #{resourceId}
    </delete>

    <delete id="deleteAllRefByRoleId" parameterType="Long">
        delete from
        <include refid="TABLE_NAME"/>
        where ROLE_ID = #{roleId}
    </delete>


    <select id="getRoleIdAndResourceId"  resultMap="RoleResourceRefResultMap">
        select
          <include refid="CommonFieldSql"/>
        from
          <include refid="TABLE_NAME"/>
        where ROLE_ID = #{roleId} and  RESOURCE_ID = #{resourceId}
    </select>

    <select id="findAllResourceForRoleByRoleId"  resultMap="RoleResourceRefResultMap">
        select
        <include refid="CommonFieldSql"/>
        from
        <include refid="TABLE_NAME"/>
        where ROLE_ID = #{roleId}
        order by RESOURCE_ID asc
    </select>

    <select id="findAllAvaiableRes4RoleByRoleId"  resultMap="RoleResourceRefResultMap">
        select
        <include refid="CommonFieldSql"/>
        from
        <include refid="TABLE_NAME"/>
        where ROLE_ID = #{roleId}
        and ACCES=1
        order by RESOURCE_ID asc
    </select>

</mapper>