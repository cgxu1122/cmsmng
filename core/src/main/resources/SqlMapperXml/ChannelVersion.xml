<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ifhz.core.mapper.ChannelVersionMapper">

    <!--
create table TY_CHANNEL_VERSION
(
  version_id  NUMBER(15) not null,
  channel_id  NUMBER(15) not null,
  md5value    VARCHAR2(50) not null,
  path        VARCHAR2(500) not null,
  create_time DATE not null,
  update_time DATE not null
)
    -->
    <sql id="TABLE_NAME">TY_CHANNEL_VERSION</sql>
    <sql id="CommonFieldSql">
        version_id,
        channel_id,
        md5value,
        path,
        version,
        create_time,
        update_time
    </sql>

    <resultMap id="ChannelVersionResultMap" type="com.ifhz.core.po.ChannelVersion">
        <id column="version_id" property="versionId" jdbcType="BIGINT"/>
        <result column="channel_id" property="channelId" jdbcType="BIGINT"/>
        <result column="md5value" property="md5Value" jdbcType="VARCHAR"/>
        <result column="path" property="path" jdbcType="VARCHAR"/>
        <result column="version" property="version" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="DATE"/>
        <result column="update_time" property="updateTime" jdbcType="DATE"/>
    </resultMap>

    <select id="getByChannelId" parameterType="long" resultMap="ChannelVersionResultMap">
        select
        <include refid="CommonFieldSql"/>
        from
        <include refid="TABLE_NAME"/>
        where channel_id = #{channelId}
    </select>

    <insert id="insert" parameterType="com.ifhz.core.po.ChannelVersion">
        <selectKey resultType="long" keyProperty="versionId">
            SELECT SEQ_TY_CHANNEL_VERSION.CURRVAL FROM DUAL
        </selectKey>
        insert into
        <include refid="TABLE_NAME"/>
        (
        <include refid="CommonFieldSql"/>
        )
        values
        (
        SEQ_TY_CHANNEL_VERSION.nextval,
        #{versionId},
        #{channelId},
        #{md5value},
        #{path},
        #{version},
        #{createTime},
        #{updateTime}
        )
    </insert>
    <update id="update" parameterType="com.ifhz.core.po.ChannelVersion">
        update
        <include refid="TABLE_NAME"/>
        <set>
            <if test="md5value != null">
                md5value = #{md5Value},
            </if>
            <if test="path != null">
                path = #{path},
            </if>
            <if test="version != null">
                path = #{version},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where channel_id = #{channelId}
    </update>
</mapper>