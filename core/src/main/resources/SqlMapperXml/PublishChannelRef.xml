<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ifhz.core.mapper.PublishChannelRefMapper">
    <!--

    -->

    <sql id="TABLE_NAME">TY_PUBLISH_CHANNEL_REF</sql>
    <sql id="CommonFieldSql">
        APK_ID,
        APK_NAME,
        SOFT_NAME,
        FTP_PATH,
        MD5VALUE,
        DOWNLOAD_URL,
        ACTIVE,
        TYPE,
        CREATE_TIME,
        UPDATE_TIME
    </sql>

    <resultMap id="PublishPackageChannelRefResultMap" type="com.ifhz.core.po.PublishChannelRef">
        <id column="APK_ID" property="apkId" jdbcType="BIGINT"/>
        <result column="APK_NAME" property="apkName" jdbcType="VARCHAR"/>
        <result column="SOFT_NAME" property="softName" jdbcType="VARCHAR"/>
        <result column="FTP_PATH" property="ftpPath" jdbcType="VARCHAR"/>
        <result column="MD5VALUE" property="md5Value" jdbcType="VARCHAR"/>
        <result column="DOWNLOAD_URL" property="downloadUrl" jdbcType="VARCHAR"/>
        <result column="ACTIVE" property="active" jdbcType="VARCHAR"/>
        <result column="TYPE" property="type" jdbcType="VARCHAR"/>
        <result column="CREATE_TIME" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="UPDATE_TIME" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="getById" parameterType="long" resultMap="PublishPackageChannelRefResultMap">
        select
        <include refid="CommonFieldSql"/>
        from
        <include refid="TABLE_NAME"/>
        where APK_ID = #{apkId}
    </select>

    <insert id="insert" keyProperty="id" parameterType="com.ifhz.core.po.PublishChannelRef">
        <selectKey resultType="long" keyProperty="apkId">
            SELECT SEQ_APK_INFO.CURRVAL FROM DUAL
        </selectKey>
        insert into
        <include refid="TABLE_NAME"/>
        (
        <include refid="CommonFieldSql"/>
        )
        values
        (
        SEQ_APK_INFO.nextval,
        #{apkName},
        #{softName},
        #{ftpPath},
        #{md5Value},
        #{downloadUrl},
        #{active},
        #{type},
        #{active},
        #{createTime},
        #{updateTime}
        )
    </insert>
    <update id="update" parameterType="com.ifhz.core.po.PublishChannelRef">
        update
        <include refid="TABLE_NAME"/>
        <set>
            <if test="apkName != null">
                APK_NAME = #{apkName},
            </if>
            <if test="softName != null">
                SOFT_NAME = #{softName},
            </if>
            <if test="ftpPath != null">
                FTP_PATH = #{ftpPath},
            </if>
            <if test="md5Value != null">
                MD5VALUE = #{md5Value},
            </if>
            <if test="downloadUrl != null">
                DOWNLOAD_URL = #{downloadUrl},
            </if>
            <if test="active != null">
                ACTIVE = #{active},
            </if>
            <if test="type != null">
                TYPE = #{type},
            </if>
            <if test="updateTime != null">
                UPDATE_TIME = #{updateTime},
            </if>
        </set>
        where APK_ID = #{apkId}
    </update>
    <select id="queryAllList" resultMap="PublishPackageChannelRefResultMap">
        select
        <include refid="CommonFieldSql"/>
        from
        <include refid="TABLE_NAME"/>
        where ACTIVE = 'Y'
    </select>

    <select id="queryUpgradeList" resultMap="PublishPackageChannelRefResultMap">
        select
        <include refid="CommonFieldSql"/>
        from
        <include refid="TABLE_NAME"/>
        where UPDATE_TIME &gt;= #{version,jdbcType=TIMESTAMP}
    </select>
    <delete id="delete" parameterType="com.ifhz.core.po.PublishChannelRef">
        delete from
        <include refid="TABLE_NAME"/>
        where APK_ID = #{apkId}
    </delete>
</mapper>