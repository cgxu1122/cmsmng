<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
       default-lazy-init="true">

    <description>Shiro安全配置</description>

    <bean id="shiroDbRealm" class="com.ifhz.core.service.auth.impl.ShiroDbRealm">
        <property name="userService" ref="userService"/>
        <property name="userRoleRefService" ref="userRoleRefService"/>
        <property name="resourceService" ref="resourceService"/>
        <property name="roleService" ref="roleService"/>
    </bean>

    <bean id="shiroEhcacheManager" class="org.apache.shiro.cache.ehcache.EhCacheManager">
        <property name="cacheManagerConfigFile" value="classpath:conf/shiro-ehcache-conf.xml"/>
    </bean>

    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
        <property name="realm" ref="shiroDbRealm"/>
        <property name="cacheManager" ref="shiroEhcacheManager"/>
    </bean>

    <bean id="myCaptchaFilter" class="com.ifhz.core.shiro.filter.FormAuthenticationCaptchaFilter"/>
    <bean id="logout" class="org.apache.shiro.web.filter.authc.LogoutFilter">
        <property name="redirectUrl" value="/tymng/"/>
    </bean>
    <bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <property name="securityManager" ref="securityManager"/>
        <property name="loginUrl" value="/tymng/login"/>
        <property name="successUrl" value="/tymng/"/>
        <property name="filters">
            <map>
                <entry key="authc" value-ref="myCaptchaFilter"/>
                <entry key="logout" value-ref="logout"/>
            </map>
        </property>
        <property name="filterChainDefinitions">
            <value>
                /tymng/login = authc
                /tymng/index = authc
                /tymng/logout = logout
                /tymng/image/** = anon
                /tymng/vc/* = anon
                /tymng/common/** = anon
                /tymng/plug/** = anon
                /tymng/schedule = anon
                /tymng/** = authc
            </value>
        </property>
    </bean>

    <bean id="lifecycleBeanPostProcessor" class="org.apache.shiro.spring.LifecycleBeanPostProcessor"/>
</beans>
